{
  "name": "ai-test-case-generator",
  "version": "1.0.0",
  "description": "AI-powered Test Case Generator for Tenant Management Systems",
  "main": "src/index.js",
  "scripts": {
    "test": "npm run test:playwright",
    "test:playwright": "playwright test",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:ui": "playwright test --ui",
    "test:cypress": "cypress run",
    "test:cypress:open": "cypress open",
    "test:cypress:headed": "cypress run --headed",
    "test:both": "concurrently \"npm run test:playwright\" \"npm run test:cypress\"",
    "test:parallel": "npm run test:both",
    "generate": "node src/generator.js",
    "generate:cypress": "node src/generators/cypressGenerator.js",
    "generate:playwright": "node src/generators/playwrightGenerator.js",
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "setup": "npm install && npx playwright install && npx cypress install",
    "reports:merge": "mochawesome-merge cypress/reports/*.json > cypress/reports/merged.json",
    "reports:generate": "marge cypress/reports/merged.json --reportDir cypress/reports --inline",
    "reports": "npm run reports:merge && npm run reports:generate"
  },
  "keywords": [
    "ai",
    "test-automation",
    "tenant-management",
    "playwright",
    "test-generation"
  ],
  "author": "AI Agent MCP",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "cypress": "^13.6.0",
    "@cypress/grep": "^4.0.1",
    "cypress-multi-reporters": "^1.6.4",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "openai": "^4.20.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  }
}
